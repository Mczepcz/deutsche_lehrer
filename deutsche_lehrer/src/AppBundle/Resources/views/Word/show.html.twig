{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Word</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pl</th>
                <td>{{ entity.pL }}</td>
            </tr>
            <tr>
                <th>De</th>
                <td>{{ entity.dE }}</td>
            </tr>
            <tr>
                <th>Partofspeech</th>
                <td>{{ entity.partOfSpeech }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ entity.gender }}</td>
            </tr>
            <tr>
                <th>Grammnumber</th>
                <td>{{ entity.grammNumber }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('word') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('word_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
